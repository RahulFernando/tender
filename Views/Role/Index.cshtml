@model List<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Roles</h1>
            </div>
            <div class="col-sm-6">
                <a class="float-sm-right btn btn-primary" asp-action="Create">Add</a>
            </div>
        </div>
    </div>

    <section class="content">
        <div class="container-fluid">
            @if (Model != null)
            {
                <div class="card">
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Role</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{int i = 1;}
                                @foreach (var role in Model)
                                {
                                    <tr>
                                        <td>@i</td>
                                        <td>@role.Name</td>

                                        @{i++;}
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }
        </div>
    </section>
</section>

