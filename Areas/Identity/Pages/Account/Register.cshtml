@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    var roles = (List<IdentityRole>)ViewData["roles"];

}

<div class="card-body login-card-body">
    <p class="login-box-msg">Sign in to start your session</p>

    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="input-group mb-3">
            <select asp-for="Input.Name" class="form-control" asp-items='new SelectList(roles, "Id", "Name")'></select>
            <div class="input-group-append">
                <div class="input-group-text">
                    <span class="fas fa-user-edit"></span>
                </div>
            </div>
            <span asp-validation-for="Input.Name" class="text-danger"></span>
        </div>
        <div class="input-group mb-3">
            <input asp-for="Input.DisplayName" class="form-control" placeholder="Display Name">
            <div class="input-group-append">
                <div class="input-group-text">
                    <span class="fas fa-user"></span>
                </div>
            </div>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="input-group mb-3">
            <input asp-for="Input.Email" class="form-control" placeholder="Email">
            <div class="input-group-append">
                <div class="input-group-text">
                    <span class="fas fa-envelope"></span>
                </div>
            </div>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="input-group mb-3">
            <input asp-for="Input.Password" class="form-control" placeholder="Password" />
            <div class="input-group-append">
                <div class="input-group-text">
                    <span class="fas fa-lock"></span>
                </div>
            </div>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="input-group mb-3">
            <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Password" />
            <div class="input-group-append">
                <div class="input-group-text">
                    <span class="fas fa-lock"></span>
                </div>
            </div>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="row">
            <!-- /.col -->
            <div class="col-4">
                <button type="submit" class="btn btn-primary btn-block">Register</button>
            </div>
            <!-- /.col -->
        </div>
    </form>

    <p class="mb-0">
        <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Log as registered user</a>
    </p>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
